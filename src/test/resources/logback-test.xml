<?xml version="1.0" encoding="UTF-8" ?>


<configuration>
	<import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
	<import class="ch.qos.logback.core.ConsoleAppender"/>

	<appender name="STDOUT" class="ConsoleAppender">
		<encoder class="PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) -%kvp- %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.apache.logging.log4j" level="warn"/>

	<logger name="com.example.config.DriverFactoryExtended" level="info"/>

	<root level="debug">
		<appender-ref ref="STDOUT"/>
	</root>

	<appender name="map" class="com.example.utils.MapAppender"/>
	<root level="debug">
		<appender-ref ref="map"/>
	</root>
</configuration>
